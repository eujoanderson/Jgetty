{% set title="Log in" %}
{% extends "auth_base.j2" %}
{% block content %}
<form method="POST" action="{{ url_for('auth.login') }}">
    <div class="mt-2">
        <label for="emailorusername" class="block  text-gray-700 dark:text-gray-300 ">E-Mail or
            Username<span class="text-red-500">*</span></label>
        <input required name="emailorusername" placeholder="" type="text"
            class="block w-full px-3 py-2 mt-1 text-gray-600 dark:text-gray-200 placeholder-gray-400 bg-white dark:bg-neutral-950 border border-gray-200 dark:border-gray-50/30 rounded-md focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
    </div>

    <div class="mt-2">
        <label for="password" class="block text-gray-700 dark:text-gray-300 ">Password<span
                class="text-red-500">*</span></label>
        <input required name="password" placeholder="" type="password"
            class="block w-full px-3 py-2 mt-1 text-gray-600 dark:text-gray-200 placeholder-gray-400 bg-white dark:bg-neutral-950 border border-gray-200 dark:border-gray-50/30 rounded-md focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
    </div>
    <div class="flex justify-end mt-2">
        <button type="submit"
            class="px-3 py-2 tracking-wide text-white transition-colors duration-300 transform bg-blue-700 hover:bg-blue-800 rounded-md focus:outline-none focus:bg-blue-800 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
            Log in
        </button>
    </div>
</form>
{% if global_settings["ENABLE_REGISTRATION"]%}
<div class="mt-2">
    <p class="text-sm text-gray-600 dark:text-gray-300">Don't have an account? <a href="{{ url_for('auth.signup') }}"
            class="text-blue-600 dark:text-blue-400 hover:underline">Sign up</a></p>
</div>
{% endif %}
{% endblock %}